{
  "env": {
    "browser": true,
    "es6": true,
    "es2017": true,
    "commonjs": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "project": "tsconfig.json",
      "tsconfigRootDir": "."
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "settings": {
      "react": {
          "version": "detect"
      }
  },
  "rules": {
    "@typescript-eslint/camelcase": ["off"],
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "@typescript-eslint/interface-name-prefix": "off",
    "@typescript-eslint/restrict-plus-operands": "off", // REMOVE
    "@typescript-eslint/restrict-template-expressions": "off", // REMOVE
    "@typescript-eslint/no-empty-function": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-magic-numbers": "off", // ["warn", { "ignore": [0, 1, -1, 10, 2, 1000], "ignoreArrayIndexes": true, "ignoreEnums": true }],
    "@typescript-eslint/no-non-null-assertion": "off",
    "@typescript-eslint/no-this-alias": ["error", { "allowedNames": ["self"] }],
    "@typescript-eslint/no-unsafe-argument": "off", // delete this line
    "@typescript-eslint/no-unsafe-assignment": "off",
    "@typescript-eslint/no-unsafe-call": "off", // "error"
    "@typescript-eslint/no-unsafe-member-access": "off", // "error"
    "@typescript-eslint/no-unsafe-return": "off",
    "@typescript-eslint/unbound-method": "off",
    "array-bracket-spacing": ["error"],
    "arrow-spacing": ["error"],
    "block-spacing": ["error"],
    "callback-return": ["error"],
    "comma-spacing": ["error"],
    "comma-style": ["error", "last"],
    "curly": ["error", "all"],
    "default-case": ["error"],
    "eol-last": ["error"],
    "eqeqeq": ["error"],
    "func-call-spacing": ["error", "never"],
    "func-style": ["error", "expression"],
    "global-require": ["error"],
    "id-match": ["error", "^[_a-zA-Z0-9]*$"],
    "indent": ["error", 4, {"SwitchCase": 1}],
    "init-declarations": ["warn"],
    "jsx-quotes": ["error", "prefer-single"],
    "key-spacing": ["error", { "beforeColon": false, "afterColon": true }],
    "keyword-spacing": ["error", { "before": true, "after": true }],
    "max-depth": ["warn", 5],
    "max-len": ["error", { "code": 160, "ignoreComments": true, "ignoreStrings": true }],
    "max-lines": ["error", 500],
    "max-params": ["warn", 5],
    "max-statements-per-line": ["error", { "max": 1 }],
    "multiline-comment-style": ["error", "separate-lines"],
    "no-caller": ["error"],
    "no-case-declarations": ["off"],
    "no-console": ["warn"],
    "no-constant-condition": ["off"],
    "no-constructor-return": ["error"],
    "no-duplicate-imports": ["error"],
    "no-empty-function": ["off"],
    "no-eval": ["error"],
    "no-extra-bind": ["error"],
    "no-extra-boolean-cast": ["off"],
    "no-implied-eval": ["error"],
    "no-label-var": ["error"],
    "no-labels": ["error"],
    "no-mixed-operators": ["warn"],
    "no-multi-spaces": ["error"],
    "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 0, "maxBOF": 1 }],
    "no-new-func": ["error"],
    "no-octal-escape": ["error"],
    "no-param-reassign": ["warn"],
    "no-proto": ["error"],
    "no-return-assign": ["error"],
    "no-return-await": ["error"],
    "no-shadow": ["off"],
    "no-tabs": ["error"],
    "no-throw-literal": ["error"],
    "no-trailing-spaces": ["error"],
    "no-unneeded-ternary": ["error"],
    "no-unreachable": ["error"],
    "no-unused-expressions": ["error"],
    "no-use-before-define": ["off"],
    "no-whitespace-before-property": ["error"],
    "object-curly-spacing": ["warn", "always"],
    "object-shorthand": ["warn"],
    "prefer-promise-reject-errors": ["error"],
    "prefer-regex-literals": ["warn"],
    "prefer-spread": ["error"],
    "quotes": [2, "single"],
    "radix": ["error", "as-needed"],
    "react/display-name": ["off"],
    "react/prop-types": ["off"],
    "require-await": ["error"],
    "semi-spacing": ["error"],
    "semi": ["error", "always"],
    "space-before-blocks": ["error"],
    "space-infix-ops": ["error"],
    "strict": ["error"],
    "switch-colon-spacing": ["error"]
  }
}